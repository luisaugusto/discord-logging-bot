    "ytdl-core": "^4.11.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "bun-types": "^1.0.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^9.0.0",
